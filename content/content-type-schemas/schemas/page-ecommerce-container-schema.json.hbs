{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://demostore.amplience.com/site/pages/ecommerce-container",
	"title": "Ecommerce Container",
	"description": "",
	"allOf": [
		{
			"$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
		}
	],
	"trait:hierarchy": {
        "childContentTypes": []
    },
	"trait:sortable": {
        "sortBy": [
            {
                "key": "default",
                "paths": [
                    "/_meta/hierarchy/position"
                ]
            }
        ]
    },
	"type": "object",
	"properties": {
		"active": {
            "type": "boolean",
            "title": "Is Active?",
            "description": "When unchecked, this page becomes inaccessible.",
            "default": true,
            "ui:component": {
                "name": "switch",
                "params": {
                    "labelPosition": "left"
                }
            }
        },
		"name": {
            "title": "Ecommerce Category",
            "description": "The eCommerce category that will be displayed on this page",
            "type": "array",
            "items": {
                "type": "string",
                "ui:extension": {
                    "name": "ecomm-toolkit",
                    "params": {
                        "label": "Linked Category",
                        "view": "tree",
                        "data": "category",
                        "type": "string"
                    }
                }
            }
        }
	}
}